<h1>Hello, Rails!</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Billboard</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'Admin', articles_path %>

  <tbody>

    <% @articles.last(10).reverse.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.billboard %></td>
        <td><%= truncate(article.body, :length => 1000, :separator => ' ') %></td>
        <!-- <td><%= link_to 'Show', article %></td> -->
        <!-- <td><%= link_to 'Edit', edit_article_path(article) %></td> -->
        <!-- <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
